{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "paths": {
      "./src/*": ["./src/*"]
    },
    // Enable latest features
    "lib": ["es2016"],
    // Enable latest features
    "module": "ESNext",
    "moduleDetection": "force",
    "target": "es2016",
    "incremental": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    // Best practices
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true
  }
}
